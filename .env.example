# Flask Configuration (Required)
SECRET_KEY=
APP_SETTINGS=config.ProductionConfig
APP_NAME=Flask App

# Database Configuration (Required)
SQLALCHEMY_DATABASE_URI=sqlite:///dev.db
# For development with separate DB:
# DEV_DB_URI=sqlite:///dev.db
# For local development:
# LOCAL_DATABASE_URI=sqlite:///local.db

# Security Configuration (Required)
# Generate a random salt for password hashing - DO NOT use a simple string
SECURITY_PASSWORD_SALT=

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Settings
MAINTENANCE_MODE=False
# set to the actual host name in production, e.g. myapp.com
HOST_NAME=localhost:5000
LOG_TO_STDOUT=False
# Number of Gunicorn workers (recommended: 2-4 x CPU cores)
GUNICORN_WORKERS=

# Mail Configuration (Required for email features)
MAIL_SERVER=
# Use 465 for SSL, 587 for TLS
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=

# Stripe Configuration (Optional - for payment features)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# PostHog Analytics (Optional)
POSTHOG_API_KEY=